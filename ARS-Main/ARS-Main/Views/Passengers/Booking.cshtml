@model ARS_Main.Models.BookingViewModel
@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_VietUserLayoutPage2.cshtml";
}


<div class="container">
    <div class="row">
        <h2>Booking</h2>
        <div class="col-md-12">
            @using (Html.BeginForm("Booking", "Passengers", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                  

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label col-md-2">Select Your Trip</label>
                        <div class="col-md-6">                            
                            @Html.DropDownListFor(model => model.Flight, new SelectList(Model.Flights, "ID", "DepTime"), "Select Your Depature Time", new { @class = "form-control", required = "" })
                            @Html.ValidationMessageFor(model => model.Flight, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Number of chair</label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.NumberOfChairs, new { htmlAttributes = new { @class = "form-control", required = "", Minimum = "0", Maximum = "10" } })
                            @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-4">
                            <input type="submit" value="Booking" class="btn btn-info btn-block" required />
                            <div>
                                <br />
                                @Html.ActionLink("Index", "FlightBook", null, new { @class = "btn btn-block btn-success" })
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
        @*<br /><br />
            <div class="col-md-4 col-md-offset-1">
                <img src="~/Uploads/@Model." width="450px" height="400px" title="" />
            </div>*@
    </div>
</div>

